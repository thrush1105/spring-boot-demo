<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.repository.UserRepository">
    <select id="findAll" resultType="com.example.demo.model.User">
        SELECT * FROM users
    </select>
    <select id="findByEmail" resultType="com.example.demo.model.User">
        SELECT * FROM users
        WHERE email = #{email}
    </select>
    <insert id="save">
        INSERT INTO users
            (name, email, password, created_at, updated_at)
        VALUES
            (#{name}, #{email}, #{password}, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP)
    </insert>
</mapper>
